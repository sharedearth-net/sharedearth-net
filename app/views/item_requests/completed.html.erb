<div id="completed-request-page" class="clearfix">
	<div id="sidebar-left">
	
		<div class="feedback-holder">
			<%= image_tag @item_request.gifter.avatar(:medium), :alt => "" %>
			<%#= image_tag('profile-narrow-1.png', :alt => "")  %>
			<% if @item_request.both_parties_left_feedback? -%>
			  <%= feedback_box_colour(@item_request.feedback_from_requester?) %>
			<% else -%>
			  <div class="feedback neutral-feedback"></div>
			<% end -%>			
		</div>
	
	
		<div class="trust-box-holder">
			
			<%= image_tag('curve-top-sidebar-box-small.png', :alt => "")  %>
		
			<div class="trust-reputation-box">
			
				<h2><%= @item_request.gifter.name%></h2>
		
				<%= image_tag('devider-small.png', :class =>"devider", :alt => "")  %>
			
				<h3>Reputation</h3>
				<ul class="action-list clearfix">
				  <li>
				    <%= link_to @item_request.gifter.reputation_rating.gift_actions_count.to_s, "#", :class => "giftactions", :title => "Gift Actions" %>
			    </li>
			    <li>
				    <%= link_to @item_request.gifter.reputation_rating.distinct_people_count.to_s, "#", :class => "people-helped", :title => "People Helped" %>
			    </li>
			    <li>
			      <% feedback_rating = @item_request.gifter.reputation_rating.feedback_rating?%>
				    <%= link_to feedback_rating.nil? ? "n/a" : (feedback_rating.to_s + "%"), "#", :class => "feedback-rating", :title => "Positive Feedback Rating" %>
			    </li>
				</ul>
				<%= image_tag('devider-small.png', :class =>"devider", :alt => "")  %>
				<h3>Trust Profile</h3>
			
				<ul class="trust-list clearfix">
				  <% if @item_request.gifter.trusted_network_size == 0%>
					<li class="clearfix">
						<a href="#" class="untrusted" title="Untrusted Profile"></a>
					</li>
					<% else %>
          <li class="clearfix">
						<a href="#" class="trusted" title="Trusted Profile"><%= @item_request.gifter.trusted_network_size %></a>
					</li>
					<% end %>
					<li class="clearfix">
						<a href="#" class="extended" title="Extended Network"><%= @item_request.gifter.extended_network_size %></a>
					</li>														
					<li class="no-icon clearfix">
						<a href="#">43</a>
					</li>
				</ul>
			
			
			</div>
			<%= image_tag('curve-bottom-sidebar-box-small.png', :alt => "")  %>
		</div>
	
	</div><!--	/sidebar-left	-->

	<div id="content">
	
		<h2><%= item_request_completed_sentence(@item_request)%></h2>
		
		<div class="item-holder">
  		<%= image_tag @item_request.item.photo.url(:medium), :alt => "Item Completed Sample" if @item_request.item.has_photo? %>
		</div>
   
		<div class="messages-holder">
		   
      <% if @item_request.both_parties_left_feedback? -%>
        <% @item_request.feedbacks.each do |feedback|%>
          <% if feedback.neutral_or_negative? %>
          <% person = Person.find_by_id(feedback.person_id)%>
				<p class="message bad">
				    <span><%= person.name %>:</span> <%= feedback.feedback_note %>
				</p>
          <% end %>
        <% end %> 
	    <% end -%>
	
			<!--
			<p>
				<a href="#">Dan Gooden</a> would like to borrow your 24 speed Giant 
				mountain bike on the 30th October
			</p>
			-->
			
		</div>
	
		
		<% unless @comments.nil?%>
		<div class="content-box-holder">
			<ul>
				<li class="content-box clearfix">
						
					<div class="inner-content">
							
						<ul class="comment-list">
						<% @comments.each do |c| -%>
						  <% person = c.user.person %>
						  <li>	
								<%= image_tag person.avatar(:square), :class => "thumb" %>
								<p>
									<%= link_to person.name, person_path(person) %> says: <%= c.comment %>
									<span><%= time_ago_in_words(c.created_at) %></span>
								</p>
							</li> 
						<% end -%>
							
							<%= render :partial => 'comments/new', :locals => { :commentable => @item_request } %>

						</ul>

					</div>
				</li>
			</ul>

		</div>
		<% end %>
		
		
	
		<!-- /.content-box-holder  --> 
	
	</div><!--	/content -->

	<div id="sidebar">
	
	
		<div class="feedback-holder">
		  <%= image_tag @item_request.requester.avatar(:large), :alt => "" %>
			<%#= image_tag('profile-narrow-2.png', :alt => "")  %>
			<% if @item_request.both_parties_left_feedback? -%>
			  <%= feedback_box_colour(@item_request.feedback_from_gifter?) %>
			<% else -%>
			  <div class="feedback neutral-feedback"></div>
			<% end -%>		
		</div>
	
	
	
		<div class="trust-box-holder">
			<%= image_tag('curve-top-sidebar-box-small.png', :alt => "")  %>
			<div class="trust-reputation-box">
			
				<h2><%= @item_request.requester.name%></h2>
				
				<%= image_tag('devider-small.png', :class =>"devider", :alt => "")  %>
				
			
				<h3>Reputation</h3>
				<ul class="action-list clearfix">
					<li>
				    <%= link_to @item_request.requester.reputation_rating.gift_actions_count.to_s, "#", :class => "giftactions", :title => "Gift Actions" %>
			    </li>
			    <li>
				    <%= link_to @item_request.requester.reputation_rating.distinct_people_count.to_s, "#", :class => "people-helped", :title => "People Helped" %>
			    </li>
			    <li>
			      <% feedback_rating = @item_request.requester.reputation_rating.feedback_rating?%>
				    <%= link_to feedback_rating.nil? ? "n/a" : (feedback_rating.to_s + "%"), "#", :class => "feedback-rating ", :title => "Positive Feedback Rating" %>
			    </li>
				</ul>
				<%= image_tag('devider-small.png', :class =>"devider", :alt => "")  %>
				<h3>Trust Profile</h3>
			
				<ul class="trust-list clearfix">
				  <% if @item_request.gifter.trusted_network_size == 0%>
					<li class="clearfix">
						<a href="#" class="untrusted" title="Untrusted Profile"></a>
					</li>
					<% else %>
          <li class="clearfix">
						<a href="#" class="trusted" title="Trusted Profile"><%= @item_request.requester.trusted_network_size %></a>
					</li>
					<% end %>
					<li class="clearfix">
						<a href="#" class="extended" title="Extended Network"><%= @item_request.requester.extended_network_size %></a>
					</li>								
					<li class="no-icon clearfix">
						<a href="#">43</a>
					</li>
				</ul>
			
			
			</div>
			<%= image_tag('curve-bottom-sidebar-box-small.png', :alt => "")  %>
		</div>
	
	
	</div><!--	/sidebar  -->

</div><!--	/completed-request-page  -->

