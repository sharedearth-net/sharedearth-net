<% if model.errors.any? %>
	<script>
		window.notificationTitle = window.notificationTitle || "<%= pluralize(model.errors.count, "error") %> prohibited this item from being saved";
		window.notificationMessage = window.notificationMessage || "";
		<% model.errors.full_messages.each do |msg| %>
			window.notificationMessage += "<%=raw escape_javascript( msg ) %><br />";
		<% end %>
	</script>
<% end %>
