<div id="search-page" class="clearfix">


	<%= render :partial => "shared/search_sidebar" %>
	
	<div id="content">
	
		<div class="content-box-holder no-bg">
			
			<h2>
				<%= link_to "Items" if items_search %>
				<%= link_to "People" if people_search %>
				<%= link_to "All Results" if all_search %>
			</h2>
			<div class="search-holder clearfix">
				<%= form_tag search_index_path, :method => 'get' do %>
		        <div>
		          <%= text_field_tag :search, params[:search] %>
		          <button type="submit" title="Search">Search</button>
		        </div>
	      		<% end %>
			</div>

			<% if (((@items.empty? && items_search) || (@people.empty? && people_search)) && !all_search) || (all_search && @items.empty? && @people.empty? )%>
			  <h3>Search term not found</h3>
				<p>
					<br>Looking for people on sharedearth.net? <a class="trusted" href=" /findtheothers">Find the others.</a>
				</p>
			<% end %>
			<% unless @items.empty? -%>
			  <div class="items-list clearfix">
			  <h3 class="default-title">
					From sharedearth.net network
				</h3>
				<ul class="clearfix">
				<% @item_in_groups.each do |type, items| %>
					<% items.each do |item| %>
						<%= render "items/item", :item => item, :action_list => [:person_name, :view, :request].to_set  %>
					<% end%>
				<% end %>
				</ul>
				<!--<a href="#" class="button-more">
					2 more
				</a>
				-->
				</div><!-- /items-list -->
			<% end -%>
			<% unless @people.empty? -%>
			  <div class="items-list clearfix">
				<p>
					Looking for people on sharedearth.net? <a class="trusted" href=" /findtheothers">Find the others.</a>
                    <br><br>
				</p>
			  	<h3 class="default-title">
					In the network
				</h3>
				<ul class="clearfix">
				<% @people.each do |person| %>
          <%= render :partial => "people/person", :locals => {:person => person} %>
        <% end%>
				</ul>
				
				
				
				</div><!-- /items-list -->
			<% end -%>
			
			
			
	
		</div><!-- /content-box-holder  -->
	
	</div><!--	/content -->
	
</div><!--	/search-page -->
			
