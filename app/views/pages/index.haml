!!! 5
%html
  %head
    %title= @page_title
    
    / %link{:type=>"text/css", :href=>"less/landing.less", :rel=>"stylesheet/less"}
    / %script{:type=>"text/javascript", :src=>"js/modernizr.js"}
    / %script{:type=>"text/javascript", :src=>"js/less.js"}
    / %script{:type=>"text/javascript", :src=>"js/jquery.js"}
    / %script{:type=>"text/javascript", :src=>"js/jqui.js"}
    / %script{:type=>"text/javascript", :src=>"js/functions.js"}
  %body
    %div.wrapper
      %div.container
        %div.half.landing-left
          %div{:title=>"Sharedearth", :class=>"logo-big"}
            =image_tag"img/logo.png"
            
            %h1
              shared
              %span.imp#imp>< earth.net
            %h2
              Build the commons 
              %span.imp#imp Change the world
        %div.half.landing-right
          %div.sidebar-block
            %ul.block-list
              %li.earth 
                %b 1 earth.
              %li.human 
                %b 
                  =authorized_persons_count
                  
                beings connected
              %li.resources-shared 
                %b 
                  =resources_shared_count 
                resources shared
              %li.resources-commoned 
                %b 300  
                resources commoned
              %li.gift 
                %b 
                  =gift_actions_count 
                gift actions undertaken
          %h1 
            Locate 
            %span.imp shared 
            resources anywhere on 
            %span.imp earth
          =link_to "Connect", new_session_path, :class => "button", :remote=>true