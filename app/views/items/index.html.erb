	<div id="manage-resources-page">
		<div id="sidebar-left">
			
		
			<ul>
				<li class="all">
					<a href="#">All Results</a>
				</li>
				<li class="items selected">
					<a href="#">Items</a>
				</li>
				<!--
					<li class="people">
						<a href="#">Skills</a>
						</li>
				-->
			</ul>
		
		</div><!--	/sidebar-left	-->
	
		<div id="content">
		
			<div class="content-box-holder no-bg">
			
				<h2>Manage Resources</h2>
				
				<ul class="action-buttons-list clearfix">
					<li>
						<%= link_to '+ Item', new_item_path, :class => "positive" %>
					</li>
				</ul>
				
				<div class="items-list clearfix">
					<h3 class="default-title">Items</h3>
					
					<ul class="clearfix">
						<% @items.each do |item| %>
						  <%= render "items/item", :item => item, :action_list => [:show, :edit, :delete].to_set  %>
						<% end if !@items.nil?%>
					</ul>
					
					
				</div><!-- /items-list -->
		
			</div><!-- /content-box-holder  -->
		
		</div><!--	/content -->
		
	</div><!--	/manage-resources-page-->

<!--
	Manage resources by predrag end
-->

